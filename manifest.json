{
  "manifest_version": 3,
  "name": "BTC Price Notifier",
  "version": "1.2",
  "description": "Notifies you of the current BTC price at a custom interval.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["notifications", "alarms", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}
